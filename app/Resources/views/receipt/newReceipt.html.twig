{% extends 'base.html.twig' %}
{% block body %}
    <h2> New Receipt</h2>
    <div class="row">
        <div class="col-md-4">
            <form>
                {{ form_start(form) }}
                <div class="form-group row m-1">
                    <label for="Name" class="col-sm-2 col-form-label"> {{ form_label(form.Name) }}</label>
                    <div class="col-sm-8">
                        {{ form_widget(form.Name) }}
                    </div>
                </div>
                <div class="form-group row m-1">
                    <label for="Name" class="col-sm-2 col-form-label"> {{ form_label(form.Price) }}</label>
                    <div class="col-sm-8">
                        {{ form_widget(form.Price) }}
                    </div>
                </div>
                <div class="form-group row m-1">
                    <label for="Name" class="col-sm-2 col-form-label"> {{ form_label(form.Quantity) }}</label>
                    <div class="col-sm-8">
                        {{ form_widget(form.Quantity) }}
                    </div>
                </div>
                <div class="form-group row m-1">
                    {{ form_widget(form.Add,{'attr':{'class':'btn btn-sm btn-info col-md-5 m-1'}}) }}
                    {{ form_widget(form.Save,{'attr':{'class':'btn btn-sm btn-success col-md-5 m-1'}}) }}
                </div>
                {{ form_end(form) }}
            </form>
        </div>
        <div class="col-md-8 ">
            <h4>Items:</h4>
            <table class="table table-sm border rounded">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.nr }}</td>
                            <td>{{ item.name }}</td>
                            <td>{{ item.price }}</td>
                            <td>{{ item.quantity }}</td>
                            <td><a class="btn btn-danger" href="{{ url("deleteReceiptItem",{"id": item.nr}) }}"> x</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}